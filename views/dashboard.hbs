{{> menu id="dashboard"}}

<section class="ui raised segment">
    <h1>Dashboard</h1>
</section>

{{#if stations}}
{{#each stations}}
  <section class="ui segment">
  {{#if readings}}
    {{> latestreading name=name reading=(last readings)}}
  {{else}}
    <h2>{{capitilize name}}</h2>
    <p>No Weather available for {{capitilize name}} Station.</p>
  {{/if}}
  <div class="ui divider"></div>
  <a href="/stations/{{id}}">
    <div class="ui vertical animated button">
      <div class="hidden content">View</div>
      <div class="visible content">
        <i class="eye icon"></i>
      </div>
    </div>
  </a>
  </section>
{{/each}}
{{else}}
<div class="ui icon blue message">
  <i class="lightbulb icon"></i>
  <div class="content">
    <div class="header">
      You currently have no Weather Stations
    </div>
  </div>
</div>
{{/if}}
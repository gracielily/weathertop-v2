{{> menu id="login"}}

<!-- Main Heading -->
<section class="ui segment">
  <h2 class="ui center aligned icon header blue">
    <i class="circular sign in icon"></i>
    Login
  </h2>
</section>
<!-- Login Form -->
{{#if error}}
{{> displayerror error=error }}
{{/if}}
<section class="ui left aligned grid">
  <div class="column">
    <form action="/authenticate" class="ui large form" method="POST">
      <div class="ui raised segment">
        <h3 class="ui left aligned header">Sign Into Your Account</h3>
        <div class="field">
          <label for="email">E-mail</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input id="email" name="email" placeholder="johnsmith@example.com" required type="text">
          </div>
        </div>
        <div class="field">
          <label for="password">Password</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input id="password" name="password" placeholder="Password" required type="password">
          </div>
        </div>
        <button class="ui fluid large blue submit button">Login</button>
      </div>
    </form>
    <!-- Register Message -->
    <section class="ui message center aligned grid">
      <p>Don't have an account? <a href="/signup">Register Instead</a></p>
    </section>
  </div>
</section>